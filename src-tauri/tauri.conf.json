{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "QBZ",
  "version": "1.1.5",
  "identifier": "com.blitzfc.qbz",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "QBZ",
        "width": 1280,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "decorations": false,
        "transparent": true,
        "resizable": true,
        "zoomHotkeysEnabled": true
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": [
          "$CACHE/qbz/**",
          "$CONFIG/qbz/**",
          "$HOME/.cache/qbz/**",
          "$HOME/.config/qbz/**",
          "$HOME/**",
          "/mnt/**",
          "/media/**",
          "/run/media/**"
        ]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "Music",
    "shortDescription": "Native Qobuz client for Linux",
    "longDescription": "QBZ is a native Qobuz streaming client for Linux, designed for audiophiles who need bit-perfect playback without browser sample rate limitations.",
    "linux": {
      "deb": {
        "depends": [],
        "recommends": ["alsa-utils"]
      },
      "rpm": {
        "depends": [],
        "recommends": ["alsa-utils"]
      }
    }
  }
}
